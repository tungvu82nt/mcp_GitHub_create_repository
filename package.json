{
  "name": "yapee-ecommerce",
  "private": true,
  "version": "1.0.0",
  "description": "YA PEE E-commerce Platform - Enterprise-grade online shopping solution",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "serve": "npm run build && npm run start:prod",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:performance": "npm run build && lighthouse http://localhost:5173 --output=json --output-path=./performance-report.json",
    "test:load": "artillery quick --count 50 --num 10 http://localhost:5173",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:performance",
    "db:migrate": "node scripts/create-database.js",
    "db:seed": "node scripts/import-mock-data.js",
    "db:test": "node scripts/test-db-setup.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t yapee-frontend .",
    "docker:run": "docker run -p 80:80 yapee-frontend",
    "deploy:staging": "npm run build && rsync -avz dist/ user@staging.yapee.com:/var/www/html/",
    "deploy:production": "node scripts/deploy-production.js",
    "serve:local": "node scripts/start-production.js",
    "test:production": "node test-production-server.js",
    "test:all:local": "npm run test:run && npm run test:production",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js"
  },
  "keywords": [
    "ecommerce",
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "nodejs",
    "mysql",
    "docker"
  ],
  "author": "YA PEE Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.7",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "serve-static": "^1.15.0",
    "sirv": "^2.0.4",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "tailwindcss": "^3.4.1",
    "uuid": "^9.0.1",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "artillery": "^2.0.8",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.2.0",
    "lighthouse": "^11.6.0",
    "msw": "^2.2.3",
    "nodemon": "^3.0.3",
    "playwright": "^1.42.1",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/yapee-ecommerce.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/yapee-ecommerce/issues"
  },
  "homepage": "https://yapee.com",
  "overrides": {
    "react-router-dom": "^6.22.3"
  }
}